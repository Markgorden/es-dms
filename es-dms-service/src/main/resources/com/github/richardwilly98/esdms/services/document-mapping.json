{
	"document": {
		"properties": {
			"versions" : {
				"type": "object",
				"properties": {
					"id" : {
						"type": "string"
					},
					"version_id" : {
						"type": "integer"
					},
					"parent_id" : {
						"type": "integer"
					},
					"document_id" : {
						"type": "string"
					},
					"current" : {
						"type": "boolean"
					},
					"file": {
						"type": "object",
						"properties": {
							"content": {
                                "type": "attachment",
                                "fields": {
                                    "content": {
                                    	"type": "multi_field",
                                        "fields": {
                                            "content" : {
                                                "type": "string",
                                                "store": "yes",
                                                "term_vector": "with_positions_offsets",
                                                "index_options": "offsets" 
                                            },
                                            "language" : { 
                                                "type" : "langdetect",
                                                "fields": {
                                                   "language" : { "type" : "string", "store" : true },
                                                    "lang" : { "type" : "string", "store" : true }
                                                }
                                            }
                                        }
                                    },
            						"title" : { 
        								"store" : "yes" 
        							},
        							"language" : { 
        								"store" : "yes" 
        							},
        							"author" : { 
        								"store" : "yes" 
        							},
        							"keywords" : { 
        								"store" : "yes" 
        							},
        							"date" : { 
        								"store" : "yes" 
        							},
        							"content_length" : { 
        								"store" : "yes" 
        							},
        							"content_type" : { 
        								"store" : "yes" 
        							}
                                }
					        }
						}
					}
				}
			},
			"attributes" : {
				"type": "object",
				"properties": {
					"modified": {
						"type": "date"
					},
					"creation": {
						"type": "date"
					},
					"author": {
						"type": "string"
					},
					"status": {
						"type": "string",
						"index":"not_analyzed"
					}
				}
			},
			"tags" : {
				"type" : "string",
				"index":"not_analyzed", 
				"index_name" : "tag"
			},
			"ratings" : {
				"type" : "nested",
				"properties": {
					"date": {
						"type": "date"
					},
					"user": {
						"type": "string"
					},
					"score": {
						"type": "integer"
					}
				}
			}
		}
	}
}
